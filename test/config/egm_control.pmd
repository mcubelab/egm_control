cmd "0-roscore" {
    exec = "roscore";
    host = "localhost";
}
cmd "1-egm_control-py" {
    exec = "rosrun egm_control EGMControl.py";
    host = "localhost";
}
cmd "1-egm_control-cpp" {
    exec = "rosrun egm_control EGMControl";
    host = "localhost";
}
cmd "2-datasaver" {
    exec = "rosrun egm_control datasaver.py";
    host = "localhost";
}
cmd "3-example_controller" {
    exec = "rosrun egm_control example.py";
    host = "localhost";
}

script "test" {
    start cmd "2-datasaver";
    wait ms 500;
    start cmd "3-example_controller" wait "stopped";
    wait ms 2000;
    stop cmd "2-datasaver";
}
